<launch>

  <let name="device" value="tcp:host=localhost;port=33333"/>
  <let name="port" value="44444"/>

  <push-ros-namespace namespace="thymio"/>

  <node pkg="asebaros" exec="asebaros" args="$(var device) -p $(var port) --ros-args --log-level info" output="screen" required="true">
    <param name="single" value="true"/>
    <param name="nodes">
      <param name="e-puck0">
        <param name="accept_all" value="false"/>
      </param>
    </param>
    <param name="script">
      <param name="path" value="$(find-pkg-share asebaros)/launch/example.aesl"/>
      <param name="constants">
        <param name="CONSTANT_A" value="2"/>
      </param>
    </param>
  </node>
</launch>
